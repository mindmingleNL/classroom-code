generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Plants {
  id     Int     @id @default(autoincrement())
  kind   String
  age    Int
  public Boolean
  userId Int
  owner  Users   @relation(fields: [userId], references: [id])
}

model Users {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  Plants   Plants[]
}
