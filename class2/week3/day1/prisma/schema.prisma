generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id    Int    @id @default(autoincrement())
  name  String
  price Float
}

// Integer: 1
// Float: 400.99

model Student {
  id           Int      @id @default(autoincrement())
  startedAt    DateTime
  firstName    String
  lastName     String
  age          Int
  gender       String
  averageGrade Float
  dateOfBirth  DateTime
  isHappy      Boolean
}
