// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Pet {
  id     Int     @id @default(autoincrement())
  name   String
  age    Int
  tame   Boolean
  kind   Kind    @relation(fields: [kindId], references: [id])
  kindId Int
}

model Kind {
  id   Int    @id @default(autoincrement())
  name String
  Pet  Pet[]
}
